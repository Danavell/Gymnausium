<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BestAppClient"
             x:Class="BestAppClient.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand" Padding="30">
        <Label Text="Login" Font="30" HorizontalOptions="Center"/>
        <Entry x:Name="username" Placeholder="username"/>
        <Entry x:Name="password" Placeholder="password" IsPassword="True" Completed="ButtonClicked"/>

        <Button
            Text="Continue" 
            Clicked="ButtonClicked"/>
    </StackLayout>

</ContentPage>
